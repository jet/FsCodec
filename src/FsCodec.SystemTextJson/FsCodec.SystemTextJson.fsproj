    <PackageReference Include="System.Text.Json" Version="6.0.1" />
    <PackageReference Include="TypeShape" Version="10.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../FsCodec/FsCodec.fsproj" />
  </ItemGroup>

